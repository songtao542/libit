<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 占位层，代码中使用 setDrawableByLayerId 进行替换 -->
    <item
        android:id="@+id/animator_layer"
        android:width="167dp"
        android:height="67dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <corners android:radius="33.5dp" />
            <size
                android:width="167dp"
                android:height="67dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/progress_color"></stroke>
        </shape>
    </item>

    <item
        android:width="164dp"
        android:height="64dp"
        android:bottom="10dp"
        android:gravity="center"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="rectangle">
            <size
                android:width="164dp"
                android:height="64dp" />
            <corners android:radius="32dp" />
            <gradient
                android:angle="270"
                android:endColor="@color/state_button_gradient_end_color"
                android:startColor="@color/state_button_gradient_start_color" />
            <stroke
                android:width="0dp"
                android:color="@color/progress_color" />
        </shape>
    </item>

    <item
        android:bottom="10dp"
        android:gravity="center"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <ripple android:color="?attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <size
                        android:width="164dp"
                        android:height="64dp" />
                    <corners android:radius="32dp" />
                    <solid android:color="@android:color/darker_gray"></solid>
                </shape>
            </item>
        </ripple>
    </item>

</layer-list>
