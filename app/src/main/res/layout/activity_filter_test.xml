<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.liabit.test.filtertest.TestFilterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        android:fitsSystemWindows="true"
        app:title="@string/filter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/showAsPopup"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Show As PopupWindow"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/showFilterAsFragment"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Show As Fragment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/showFilterAsDialog"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Show As Dialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/showTwoColumnAsPopup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Show Two Column As PopupWindow"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/showTwoColumnFilterAsFragment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Show Two Column Filter as Fragment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/showTwoColumnFilterAsDialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Show Two Column As Dialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/showShortFragment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Show Short List As Fragment"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/showShortPopup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Show Short List As Popup"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/showShort"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Show Short List As Dialog"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>