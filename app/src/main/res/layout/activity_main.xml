<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <Button
            android:id="@+id/stateButtonTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:text="State Button Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/shimmerTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Shimmer Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/gestureDragTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Gesture Drag Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/gestureSwipeTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Gesture Swipe Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/pickerTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Picker Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/filterTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Filter Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tabLayoutTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="TabLayout Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/decorationTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Decoration Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/addSubViewTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="AddSubView Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tagViewTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="TagView Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/popupTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Popup Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/viewBinding"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="ViewBinding Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/mapLocation"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="MapLocation Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/settings"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Settings Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/timerView"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="TimerView Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/colorTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Color Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/progressBarTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="ProgressBar Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/labelViewTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="LabelView Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/cityPickerTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="City Picker Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/nestedRecyclerView"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Nested RecyclerView Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/loadMoreTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="LoadMore Test"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/imageLoader"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Image Loader"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <Button
                android:id="@+id/notificationChannelTest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="Set Channel"
                android:textAllCaps="false" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/sendNotificationChannelTest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="Sand Notification"
                android:textAllCaps="false" />
        </LinearLayout>


        <Button
            android:id="@+id/otherTest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:onClick="onClick"
            android:text="Other Test"
            android:textAllCaps="false"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>