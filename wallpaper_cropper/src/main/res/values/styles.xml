<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="actionBarSize">52dp</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">@dimen/back_icon_size</item>
        <item name="android:maxWidth">@dimen/back_icon_size</item>
        <item name="android:tag">"ToolbarNavigationButton"</item>
    </style>

    <style name="PreviewToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="popupTheme">@style/PopupOverlay</item>
        <item name="titleMargin">0dp</item>
        <item name="titleTextAppearance">@style/PreviewToolbarTitleTextAppearance</item>
        <item name="navigationIcon">@drawable/ic_back_white</item>
    </style>

    <style name="PreviewToolbarTitleTextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textColor">@color/preview_toolbar_text_color</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
