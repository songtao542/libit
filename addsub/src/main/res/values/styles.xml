<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AddSubDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/add_sub_light_blue</item>
    </style>

    <style name="AddSubDialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/add_sub_light_blue</item>
    </style>

    <style name="AddAndSubEditDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/add_sub_dialog_background</item>
        <item name="android:windowMinWidthMajor">68%</item>
        <item name="android:windowMinWidthMinor">68%</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AddSubDialogButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AddSubDialogButtonStyle</item>
        <item name="android:windowTitleStyle">@style/AddSubDialogTitleStyle</item>
    </style>

</resources>
