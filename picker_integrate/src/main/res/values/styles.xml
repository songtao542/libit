<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="P_FlowLayout_Widget">
        <item name="column">4</item>
        <item name="space">10dp</item>
    </style>

    <style name="PhotoViewerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AlphaInOutWindowAnimation</item>
    </style>

    <style name="AlphaInOutWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/pv_fade_in</item>
        <item name="android:windowExitAnimation">@anim/pv_fade_out</item>
    </style>

    <style name="NumberPickStyle">
        <item name="colorControlNormal">@color/p_picker_title</item>
        <item name="android:colorControlNormal">@color/p_picker_title</item>
    </style>
</resources>
