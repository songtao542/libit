<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/input_dialog_light_blue</item>
    </style>

    <style name="InputDialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/input_dialog_light_blue</item>
    </style>

    <style name="InputDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/input_dialog_background</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/InputDialogButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/InputDialogButtonStyle</item>
        <item name="android:windowTitleStyle">@style/InputDialogTitleStyle</item>
    </style>

</resources>