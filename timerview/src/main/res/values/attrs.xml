<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="tickInterval" format="reference|integer" />
    <attr name="dayUnit" format="reference|string" />

    <attr name="strokeColor" format="reference|color" />
    <attr name="strokeWidth" format="reference|dimension" />

    <declare-styleable name="HalfTextView">
        <attr name="showPart" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TimerView">
        <attr name="resetSymbol" format="reference|integer" />
        <attr name="digitBackgroundColor" format="reference|color" />
        <attr name="digitTextColor" format="reference|color" />
        <attr name="digitTextSize" format="reference|dimension" />
        <attr name="delimiterTextColor" format="reference|color" />
        <attr name="delimiterTextSize" format="reference|color" />
        <attr name="digitPadding" format="reference|dimension" />
        <attr name="delimiterPadding" format="reference|dimension" />
        <attr name="animationDuration" format="reference|integer" />
        <attr name="dayUnit" />
        <attr name="tickInterval" />
        <attr name="dayVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="corners" format="reference|dimension" />
        <attr name="android:fontFamily" />
    </declare-styleable>

    <declare-styleable name="TimerTextView">
        <attr name="tickInterval" />
        <attr name="prefix" format="reference|string" />
        <attr name="suffix" format="reference|string" />
        <attr name="dayUnit" />
        <attr name="dayFormat" format="reference|string" />
        <attr name="timeFormat" format="reference|string" />
        <attr name="showAsCountDownButton" format="reference|boolean" />
        <attr name="showCountDownText" format="reference|boolean" />
        <attr name="showStrokeProgress" format="reference|boolean" />
        <attr name="strokeColor" />
        <attr name="strokeWidth" />
        <attr name="millisInFuture" format="reference|integer" />
    </declare-styleable>
</resources>
