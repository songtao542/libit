<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 占位层，代码中使用 setDrawableByLayerId 进行替换 -->
    <item
        android:id="@+id/animator_layer"
        android:width="67dp"
        android:height="67dp"
        android:gravity="center">
        <shape
            android:innerRadius="33dp"
            android:shape="ring"
            android:thickness="5dp"
            android:useLevel="false">

            <gradient
                android:endColor="@color/progress_color"
                android:gradientRadius="48dp"
                android:startColor="@color/progress_color"
                android:type="radial" />
        </shape>
    </item>

    <item
        android:width="64dp"
        android:height="64dp"
        android:bottom="10dp"
        android:gravity="center"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="oval">
            <size
                android:width="64dp"
                android:height="64dp" />
            <gradient
                android:angle="270"
                android:endColor="@color/state_button_gradient_end_color"
                android:startColor="@color/state_button_gradient_start_color" />
            <stroke
                android:width="0dp"
                android:color="@color/progress_color" />
        </shape>
    </item>

    <item
        android:bottom="10dp"
        android:gravity="center"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <ripple android:color="?attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="@android:color/darker_gray"></solid>
                </shape>
            </item>
        </ripple>
    </item>

</layer-list>