<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="icon" format="reference" />
    <attr name="iconWidth" format="reference|dimension" />
    <attr name="iconHeight" format="reference|dimension" />
    <attr name="iconSize" format="reference|dimension" />
    <attr name="strokeColor" format="reference|color" />
    <attr name="strokeWidth" format="reference|dimension" tools:override="true" />

    <declare-styleable name="StateButton">
        <attr name="icon" />
        <attr name="iconWidth" />
        <attr name="iconHeight" />
        <attr name="supportLoading" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SpringButton">
        <attr name="icon" />
        <attr name="iconWidth" />
        <attr name="iconHeight" />
        <attr name="iconSize" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
    </declare-styleable>

    <declare-styleable name="ProgressButton">
        <attr name="mode" format="enum">
            <!-- Visible on screen; the default value. -->
            <enum name="text" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="progress" value="1" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="textProgress" value="2" />
        </attr>
        <attr name="progressVisibility" format="enum">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="1" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="2" />
        </attr>
        <attr name="progressPosition" format="enum">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
        </attr>
        <attr name="progressSize" format="reference|dimension" />
        <attr name="fixedSize" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="MaterialProgressView">
        <attr name="size" format="reference|dimension" />
        <attr name="strokeColor" />
        <attr name="strokeColorScheme" format="reference" />
        <attr name="strokeWidth" />
        <attr name="strokeLineCap" format="enum">
            <!--The stroke ends with the path, and does not project beyond it.-->
            <enum name="butt" value="0" />
            <!--The stroke projects out as a semicircle, with the center at the end of the path.-->
            <enum name="round" value="1" />
            <!--The stroke projects out as a square, with the center at the end of the path.-->
            <enum name="square" value="2" />
        </attr>
        <attr name="strokeLineJoin" format="enum">
            <!--The outer edges of a join meet at a sharp angle-->
            <enum name="miter" value="0" />
            <!--The outer edges of a join meet in a circular arc.-->
            <enum name="round" value="1" />
            <!--The outer edges of a join meet with a straight line-->
            <enum name="bevel" value="2" />
        </attr>
        <attr name="trimEnd" format="reference|float" />
        <!--<attr name="trimOffset" format="reference|float" />-->
        <attr name="trimStart" format="reference|float" />
        <attr name="android:duration" />
        <attr name="showArrow" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="LabelView">
        <attr name="android:label" />
        <attr name="android:text" />
        <attr name="rightText" format="string" />
        <attr name="rightTextColor" format="color|reference" />
        <attr name="android:hint" />
        <attr name="android:textColor" />
        <attr name="labelTextColor" format="reference|color" />
        <attr name="android:textSize" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="labelTextSize" format="dimension" />
        <attr name="android:textColorHint" />
        <attr name="android:editable" />
        <attr name="labelClickable" format="boolean" />
        <attr name="labelWithColon" format="boolean" />
        <attr name="showRightArrow" format="boolean" />
        <attr name="rightArrow" format="reference" />
        <attr name="rightArrowSize" format="reference|dimension" />
        <attr name="rightArrowColor" format="reference|color" />
        <attr name="rightArrowPadding" format="reference|dimension" />
        <attr name="textPaddingStart" format="reference|dimension" />
        <attr name="textPaddingEnd" format="reference|dimension" />
        <attr name="textPaddingTop" format="reference|dimension" />
        <attr name="textPaddingBottom" format="reference|dimension" />
        <attr name="textPaddingHorizontal" format="reference|dimension" />
        <attr name="textPaddingVertical" format="reference|dimension" />
        <attr name="startIcon" format="reference" />
        <attr name="startIconSize" format="reference|dimension" />
        <attr name="startIconColor" format="reference|color" />
        <attr name="startIconPadding" format="reference|dimension" />
        <attr name="endIcon" format="reference" />
        <attr name="endIconSize" format="reference|dimension" />
        <attr name="endIconColor" format="reference|color" />
        <attr name="endIconPadding" format="reference|dimension" />
        <attr name="labelTextGravity" format="flags">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
        <attr name="textGravity" format="flags">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
        <attr name="rightTextGravity" format="flags">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
    </declare-styleable>

</resources>
