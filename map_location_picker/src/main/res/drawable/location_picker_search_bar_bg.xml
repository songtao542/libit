<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/lp_search_radius" />
            <stroke android:width="0dp" android:color="@color/lp_search_bg_color" />
            <solid android:color="@color/lp_search_bg_color" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/lp_search_radius" />
            <stroke android:width="0dp" android:color="@color/lp_search_bg_color" />
            <solid android:color="@color/lp_search_bg_color" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/lp_search_radius" />
            <stroke android:width="0dp" android:color="@color/lp_search_bg_color" />
            <solid android:color="@color/lp_search_bg_color" />
        </shape>
    </item>

</selector>