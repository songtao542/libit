<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/location_picker_my_location_btn_radius" />
            <stroke android:width="1dp" android:color="@color/location_picker_my_location_pressed" />
            <solid android:color="@color/location_picker_my_location_pressed" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/location_picker_my_location_btn_radius" />
            <stroke android:width="1dp" android:color="@color/location_picker_my_location_pressed" />
            <solid android:color="@color/location_picker_my_location_pressed" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/location_picker_my_location_btn_radius" />
            <stroke android:width="1dp" android:color="@color/location_picker_my_location_pressed" />
            <solid android:color="@color/location_picker_my_location_pressed" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/location_picker_my_location_btn_radius" />
            <stroke android:width="1dp" android:color="@color/location_picker_my_location" />
            <solid android:color="@color/location_picker_my_location" />
        </shape>
    </item>

</selector>