<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumberPickerViewDefaultStyle">
        <item name="dividerColor">@color/picker_item_divider_color</item>
        <item name="dividerHeight">1px</item>
        <item name="textColorNormal">@color/picker_item_text_color_normal</item>
        <item name="textColorSelected">@color/picker_color_accent</item>
        <item name="textColorHint">@color/picker_color_accent</item>
        <item name="textSizeNormal">@dimen/number_picker_text_size_normal</item>
        <item name="textSizeSelected">@dimen/number_picker_text_size_selected</item>
        <item name="wrapSelectorWheel">true</item>
        <item name="showItemDivider">false</item>
        <item name="itemPaddingVertical">@dimen/number_picker_item_space</item>
    </style>

    <style name="PickerDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">92%</item>
        <item name="android:windowMinWidthMinor">92%</item>
        <item name="android:windowBackground">@drawable/picker_inset_round_shape</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation</item>
    </style>

    <!-- 宽度占满屏幕 -->
    <style name="BottomSheetPickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@drawable/picker_top_round_shape</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/picker_anim_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/picker_anim_bottom_exit</item>
        <item name="android:activityOpenEnterAnimation">@anim/picker_anim_bottom_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/picker_anim_bottom_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/picker_anim_bottom_enter</item>
    </style>

</resources>